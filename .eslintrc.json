{
    "env": {
        "browser": true,
        "es2024": true,
        "jquery": true
    },
    "extends": [
        "@eslint/js"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "Highcharts": "readonly",
        "proj4": "readonly"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "warn",
        "no-console": "off",
        "camelcase": [
            "warn"
        ],
        "no-var": "error",
        "prefer-const": "warn"
    }
}